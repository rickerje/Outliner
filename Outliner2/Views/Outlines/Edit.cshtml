@model Outliner.Models.Outline

@{
    ViewData["Title"] = "Edit an Outline";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>Outline</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OutlineName" class="control-label"></label>
                <input asp-for="OutlineName" class="form-control" />
                <span asp-validation-for="OutlineName" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="ID" />
            <input type="hidden" asp-for="CurrentUserName" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
        <a asp-controller="Characters" asp-action="Create" asp-route-id="@Model.ID">Add a character to your outline</a><br />
        <a href="">Add a scene (coming soon)</a>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
