@using Microsoft.AspNetCore.Identity

@inject UserManager<IdentityUser> UserManager

@model Outliner.Models.Outline
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<h4>Outline</h4>
<hr />
@ViewBag.User=@UserManager.GetUserName(User)
<p>Current user is @UserManager.GetUserName(User)</p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OutlineName" class="control-label"></label>
                <input asp-for="OutlineName" class="form-control" />
                <span asp-validation-for="OutlineName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="CurrentUserId" type="hidden" value="@ViewBag.User" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
